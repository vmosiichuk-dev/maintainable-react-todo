        "eslint-plugin-react-refresh": "^0.4.16",
        "globals": "^15.14.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.4.1",
        "prettier": "^3.4.2",
        "pretty-quick": "^4.0.0",
        "typescript": "~5.6.2",
